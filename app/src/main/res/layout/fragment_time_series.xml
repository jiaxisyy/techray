<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10px"
        android:background="@drawable/time_series_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_id_revise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:gravity="center_horizontal"
                    android:paddingRight="120dp"
                    android:text="@string/time_series_revise"
                    android:textColor="#FFFFFF"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/flow_tv_totalflow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_id_revise"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:paddingRight="120dp"
                    android:text="0.00000"
                    android:textColor="#FFFFFF"
                    android:textSize="20px"
                    />

                <Button
                    android:id="@+id/flow_btn_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/flow_tv_totalflow"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/btn_time_series_selector"
                    android:gravity="center"
                    android:text="@string/time_series_coverage"
                    android:textColor="#FFFFFF"
                    android:textSize="24px" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_id_protect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="180dp"
                        android:gravity="center_horizontal"
                        android:text="@string/time_series_protect"
                        android:textColor="#FFFFFF"
                        android:textSize="20px" />

                    <TextView
                        android:id="@+id/flow_tv_safe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_id_protect"
                        android:layout_marginLeft="100dp"
                        android:background="@null"
                        android:gravity="center_horizontal"
                        android:text="0.00000"
                        android:textColor="#FFFFFF"
                        android:textSize="20px"

                        />

                    <Button
                        android:id="@+id/flow_btn_open"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/flow_tv_safe"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/btn_time_series_selector"
                        android:gravity="center"
                        android:text="开始"
                        android:textColor="#FFFFFF"
                        android:textSize="24px" />
                    <Button
                        android:id="@+id/flow_btn_close"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/flow_tv_safe"
                        android:layout_toRightOf="@+id/flow_btn_open"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/btn_time_series_selector"
                        android:gravity="center"
                        android:text="关闭"
                        android:textColor="#FFFFFF"
                        android:textSize="24px" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/time_series_time"
                android:textColor="#8B8C95"
                android:textSize="30px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_plc_year"
                    style="@style/PlcTimeSetting"
                    android:text="2016"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="年"
                    android:textSize="22px" />

                <TextView
                    android:id="@+id/tv_plc_month"
                    style="@style/PlcTimeSetting"
                    android:layout_marginLeft="10dp"
                    android:text="05" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="月"
                    android:textSize="22px" />

                <TextView
                    android:id="@+id/tv_plc_day"
                    style="@style/PlcTimeSetting"
                    android:layout_marginLeft="10dp"
                    android:text="05" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="日"
                    android:textSize="22px" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_plc_hour"
                    style="@style/PlcTimeSetting"
                    android:text="17"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="时"
                    android:textSize="22px" />

                <TextView
                    android:id="@+id/tv_plc_minute"
                    style="@style/PlcTimeSetting"
                    android:layout_marginLeft="10dp"
                    android:text="30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="分"
                    android:textSize="22px" />

                <TextView
                    android:id="@+id/tv_plc_second"
                    style="@style/PlcTimeSetting"
                    android:layout_marginLeft="10dp"
                    android:text="25" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="秒"
                    android:textSize="22px" />


            </LinearLayout>

            <Button
                android:id="@+id/btn_time_series_affirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_time_series_selector"
                android:text="@string/time_series_affirm"
                android:textColor="#FFFFFF"
                android:textSize="24px" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>