<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/pp_parent_background">
    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:background="@drawable/pp_login">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入数值"
                android:textSize="30px"
                />
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/pup_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24px"
                android:background="@drawable/pp_input_bg"
                android:inputType="phone"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp">
            <Button
                android:id="@+id/pup_comfirm"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textSize="24px"
                android:layout_gravity="left"
                android:textColor="#ffffff"
                android:background="@drawable/pp_affirm_selector" />
            <Button
                android:id="@+id/pup_cancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="取消"
                android:textSize="24px"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:background="@drawable/pp_affirm_selector" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>