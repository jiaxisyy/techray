<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00c2eb">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<ImageView
    android:id="@+id/logo_test"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/tairui_logo"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38px"
            android:layout_marginLeft="104px"
            android:orientation="vertical">
            <Button
                android:id="@+id/main_btn_monitor"
                android:layout_width="180px"
                android:layout_height="48px"
                android:background="@mipmap/main_btn"
                android:text="运行监控"
                android:textSize="22px"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/main_btn_parameter"
                android:layout_width="180px"
                android:layout_height="48px"
                android:background="@mipmap/main_btn"
                android:text="参数设置"
                android:textSize="22px"
                android:layout_marginTop="36px"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/main_btn_status"
                android:layout_width="180px"
                android:layout_height="48px"
                android:background="@mipmap/main_btn"
                android:text="A机状态"
                android:textSize="22px"
                android:layout_marginTop="36px"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/main_btn_alarm"
                android:layout_width="180px"
                android:layout_height="48px"
                android:background="@mipmap/main_btn"
                android:text="报警设置"
                android:textSize="22px"
                android:layout_marginTop="36px"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/main_btn_pruessure"
                android:layout_width="180px"
                android:layout_height="48px"
                android:background="@mipmap/main_btn"
                android:text="压力设置"
                android:textSize="22px"
                android:layout_marginTop="36px"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38px"
            android:layout_marginLeft="244px"
            android:orientation="vertical">
            <Button
                android:id="@+id/main_btn_analog"
                android:layout_width="180px"
                android:layout_height="48px"
                android:background="@mipmap/main_btn"
                android:text="模拟量设置"
                android:textSize="22px"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/main_btn_time"
                android:layout_width="180px"
                android:layout_height="48px"
                android:background="@mipmap/main_btn"
                android:text="A机时序设置"
                android:textSize="22px"
                android:layout_marginTop="36px"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/main_btn_valve"
                android:layout_width="180px"
                android:layout_height="48px"
                android:background="@mipmap/main_btn"
                android:text="A阀门检验"
                android:textSize="22px"
                android:layout_marginTop="36px"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/main_btn_flow"
                android:layout_width="180px"
                android:layout_height="48px"
                android:background="@mipmap/main_btn"
                android:text="累积流量"
                android:textSize="22px"
                android:layout_marginTop="36px"
                android:textColor="#ffffff"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>