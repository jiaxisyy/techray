<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/pup_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20px"
        android:textColor="#ffffff"
        android:inputType="phone"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/pup_et"
        android:layout_alignLeft="@+id/pup_et"
        android:layout_below="@+id/pup_et">
        <Button
            android:id="@+id/pup_comfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="@mipmap/pup_btn" />
        <Button
            android:id="@+id/pup_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@mipmap/pup_btn" />
    </LinearLayout>

</RelativeLayout>